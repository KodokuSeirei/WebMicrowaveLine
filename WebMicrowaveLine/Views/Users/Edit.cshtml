@model WebMicrowaveLine.ViewModels.EditUserViewModel
@{
    @Localizer["UserEditing"]
}
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label">@Localizer["UserName"]</label>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FullName" class="control-label">@Localizer["FullName"]</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Birthday" class="control-label">@Localizer["Birthday"]</label>
        <input type="date" asp-for="Birthday" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adress" class="control-label">@Localizer["Adress"]</label>
        <input type="number" asp-for="Adress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="number" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value=@Localizer["Save"] class="btn btn-default" />
    </div>
</form>